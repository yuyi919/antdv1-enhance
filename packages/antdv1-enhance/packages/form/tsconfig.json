{
  "extends": "@yuyi919/workspace-base-rig/profiles/esbuild/tsconfig-base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "jsx": "react-jsx",
    "jsxImportSource": "@yuyi919/vue-jsx-factory",
    "outDir": "dist",
    "declarationDir": "types",
    "strict": true
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/**/*.spec.tsx",
    "src/**/*.test.tsx"
  ]
}
